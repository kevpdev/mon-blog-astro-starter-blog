---
import type { SocialLinksConfig } from '../types/navigation';

interface Props {
  links: SocialLinksConfig;
  size?: 'small' | 'medium' | 'large';
  direction?: 'horizontal' | 'vertical';
  class?: string;
}

const { 
  links, 
  size = 'medium', 
  direction = 'horizontal',
  class: className = ''
} = Astro.props;

const sizeMap = {
  small: '24',
  medium: '32', 
  large: '48'
};

const iconSize = sizeMap[size];
---

<div class={`social-links social-links--${direction} ${className}`}>
  {links.map((link) => (
    <a
      href={link.href}
      target="_blank"
      rel="noopener noreferrer"
      class="social-link"
      aria-label={link.ariaLabel}
    >
      <Fragment set:html={link.icon.replace(/width="\d+"/, `width="${iconSize}"`).replace(/height="\d+"/, `height="${iconSize}"`)} />
    </a>
  ))}
</div>