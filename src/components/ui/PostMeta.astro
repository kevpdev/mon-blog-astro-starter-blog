---
import FormattedDate from './FormattedDate.astro';
import Badge from './Badge.astro';
import { createInternalUrl } from '../../utils/url.ts';

export interface Props {
  class?: string;
  date: Date;
  updatedDate?: Date;
  tags?: string[];
  author?: string;
  readingTime?: string;
  showTags?: boolean;
  showUpdated?: boolean;
  showAuthor?: boolean;
}

const { 
  class: className = '',
  date,
  updatedDate,
  tags = [],
  author,
  readingTime,
  showTags = true,
  showUpdated = true,
  showAuthor = true,
  ...props 
} = Astro.props;
---

<div class={`post-meta flex flex-wrap items-center gap-4 text-sm text-[rgb(var(--text-muted))] ${className}`} {...props}>
  <div class="post-date flex items-center gap-1">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
      <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
    </svg>
    <FormattedDate date={date} />
  </div>

  {showUpdated && updatedDate && (
    <div class="post-date flex items-center gap-1 text-xs opacity-75">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
      </svg>
      <span>Mis Ã  jour le <FormattedDate date={updatedDate} /></span>
    </div>
  )}

  {showAuthor && author && (
    <div class="post-author flex items-center gap-1">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
      </svg>
      <span>{author}</span>
    </div>
  )}

  {readingTime && (
    <div class="post-date flex items-center gap-1">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
      </svg>
      <span>{readingTime}</span>
    </div>
  )}

  {showTags && tags.length > 0 && (
    <div class="post-tags flex items-center gap-2 flex-wrap">
      {tags.map((tag) => (
        <Badge variant="secondary" size="sm" href={createInternalUrl(`/blog/tag/${tag.toLowerCase()}`)}>
          #{tag}
        </Badge>
      ))}
    </div>
  )}
</div>