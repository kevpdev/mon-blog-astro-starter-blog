---
import BaseHead from '../components/ui/BaseHead.astro';
import Header from '../components/layout/Header.astro';
import FooterNew from '../components/layout/FooterNew.astro';

export interface Props {
  title: string;
  description: string;
  lang?: string;
}

const { title, description, lang = 'fr' } = Astro.props;
---

<!doctype html>
<html
  lang={lang}
  class="h-full">
  <head>
    <BaseHead
      title={title}
      description={description}
    />
    <slot name="head" />
    <script>
      // Dark mode initialization - prevent FOUC
      function initializeTheme() {
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

        if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
          document.documentElement.classList.add('dark');
        }
      }

      // Initialize theme as early as possible
      initializeTheme();
    </script>
  </head>
  <body
    class="min-h-screen flex flex-col bg-[rgb(var(--bg-primary))] text-[rgb(var(--text-primary))] transition-colors duration-200">
    <!-- Skip to main content link for accessibility -->
    <!-- <a
      href="#main-content"
      class="skip-link">
      Aller au contenu principal
    </a> -->

    <Header />

    <main
      id="main-content"
      class="flex-1">
      <slot />
    </main>

    <FooterNew />

    <slot name="scripts" />
  </body>
</html>
