---
import PageLayout from '../layouts/PageLayout.astro';
import { authorConfig } from '../config/author.ts';
---

<PageLayout
  title="Contact"
  description="N'h√©sitez pas √† me contacter pour discuter de vos projets ou pour toute question.">
  
  <div class="max-w-2xl mx-auto">
    <p class="text-lg text-[rgb(var(--text-secondary))] mb-8">
      Vous avez un projet en t√™te ? Une question sur mes services ? 
      N'h√©sitez pas √† me contacter, je serai ravi d'√©changer avec vous !
    </p>

    <!-- 
      Pour rendre ce formulaire fonctionnel, ajoutez :
      1. Pour une API personnalis√©e : action="/api/contact" method="POST"
      2. Pour Formspree : action="https://formspree.io/f/YOUR_FORM_ID" method="POST"
      3. Pour EmailJS : Ajoutez le SDK et le script de traitement
      4. Voir la documentation dans CLAUDE.md pour plus de d√©tails
    -->
    <form class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium text-[rgb(var(--text-primary))] mb-2">
          Nom complet
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-2 border border-[rgb(var(--border-primary))] rounded-lg focus:ring-2 focus:ring-[rgb(var(--brand-primary))] focus:border-transparent bg-[rgb(var(--bg-primary))] text-[rgb(var(--text-primary))]"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-[rgb(var(--text-primary))] mb-2">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-2 border border-[rgb(var(--border-primary))] rounded-lg focus:ring-2 focus:ring-[rgb(var(--brand-primary))] focus:border-transparent bg-[rgb(var(--bg-primary))] text-[rgb(var(--text-primary))]"
        />
      </div>

      <div>
        <label for="subject" class="block text-sm font-medium text-[rgb(var(--text-primary))] mb-2">
          Sujet
        </label>
        <input
          type="text"
          id="subject"
          name="subject"
          required
          class="w-full px-4 py-2 border border-[rgb(var(--border-primary))] rounded-lg focus:ring-2 focus:ring-[rgb(var(--brand-primary))] focus:border-transparent bg-[rgb(var(--bg-primary))] text-[rgb(var(--text-primary))]"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-[rgb(var(--text-primary))] mb-2">
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          class="w-full px-4 py-2 border border-[rgb(var(--border-primary))] rounded-lg focus:ring-2 focus:ring-[rgb(var(--brand-primary))] focus:border-transparent bg-[rgb(var(--bg-primary))] text-[rgb(var(--text-primary))] resize-vertical"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-[rgb(var(--brand-primary))] text-[rgb(var(--text-inverse))] px-6 py-3 rounded-lg font-medium hover:bg-[rgb(var(--brand-primary-hover))] transition-colors focus:ring-2 focus:ring-[rgb(var(--brand-primary))] focus:ring-offset-2"
      >
        Envoyer le message
      </button>
    </form>

    <div class="mt-12 pt-8 border-t border-[rgb(var(--border-primary))] text-center">
      <h3 class="text-lg font-semibold text-[rgb(var(--text-primary))] mb-4">
        Autres moyens de contact
      </h3>
      <div class="space-y-2 text-[rgb(var(--text-secondary))]">
        <p>üìß {authorConfig.email}</p>
        {authorConfig.phone && <p>üì± {authorConfig.phone}</p>}
        {authorConfig.location && <p>üìç {authorConfig.location}</p>}
      </div>
    </div>
  </div>
</PageLayout>